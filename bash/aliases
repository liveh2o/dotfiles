# general aliases
alias cd..="cd .."
alias l="ls -al"
alias lp="ls -p"
alias o="open ."

# the "kp" alias ("que pasa"), in honor of tony p.
alias kp="ps auxwww"

# bundler aliases
alias b="bundle"
alias bc="b console"
alias bi="b install"
alias biv="bi --path vendor && echo 'vendor/ruby' >> .gitignore"
alias bivp="biv && bp"
alias bl="b list"
alias bo="EDITOR=mate b open"
alias bout="b outdated"
alias bp="b package"
alias bu="b update"
alias bx="b exec"

# git aliases
alias g="git"
alias ga="g add"
alias gaa="g add -A"
alias gb="g branch"
alias gba="g branch -a"
alias gc="g checkout"
alias gf="g fetch"
alias gi="g commit"
alias gs="g status"
alias pop="g stash pop"
alias stash="g stash"

# textmate aliases
alias m="mate -w ."

# misc
alias derp='PB_IGNORE_DEPRECATIONS=1'
alias path='echo $PATH'
alias reload='. ~/.bash_profile'
alias zmq='PB_CLIENT_TYPE=zmq PB_SERVER_TYPE=zmq'

if [ `uname` == 'Darwin' ]; then
  alias ls="ls -G"
fi
