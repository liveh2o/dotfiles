# general aliases
alias cd..="cd .."
alias l="ls -al"
alias lp="ls -p"
alias o="open ."

# the "kp" alias ("que pasa"), in honor of tony p.
alias kp="ps auxwww"

# bundler aliases
alias b="bundle"
alias bc="b console"
alias bi="b install"
alias biv="bi --path vendor && echo 'vendor/ruby' >> .gitignore"
alias bivp="biv && bp"
alias bl="b list"
alias bo="EDITOR=atom b open"
alias bout="b outdated"
alias bp="b package"
alias bu="b update"
alias bx="b exec"

# git aliases
alias g="git"
alias ga="g add"
alias gaa="g add -A"
alias gb="g branch"
alias gba="g branch -a"
alias gc="g checkout"
alias gf="g fetch"
alias gh="g rev-parse HEAD"
alias gi="g commit"
alias gibu="gi -m 'Bundle update'"
alias gigc="gi -m 'Update gem cache'"
alias gl="g log"
alias glo="gl --oneline"
alias gs="g status"
alias pop="g stash pop"
alias stash="g stash"

# editor aliases
alias a="atom ."
alias m="mate -w ."

# trebuchet aliases
alias prod="tbx treb prod"
alias int="tbx treb int"
alias qa="tbx treb qa"
alias sand="tbx treb sand"
alias corp="tbx treb corp"

# misc
alias dotfiles='cd ~/.dotfiles'
alias derp='PB_IGNORE_DEPRECATIONS=1 RUBYOPT="-W0"'
alias http='python -m SimpleHTTPServer'
alias jitless='JRUBY_OPTS="$JRUBY_OPTS -J-Djruby.compile.mode=OFF"'
alias jrbdev='JRUBY_OPTS="$JRUBY_OPTS --dev --disable:did_you_mean --debug"'
alias jrb2='JRUBY_OPTS="$JRUBY_OPTS -Xcompat.version=2.0"'
alias lrb='localrb'
alias nats='PB_CLIENT_TYPE="protobuf/nats/client" PB_SERVER_TYPE="protobuf/nats/server"'
alias ns='nslookup'
alias path='echo $PATH'
alias redis='redis-server /usr/local/etc/redis.conf'
alias reload='. ~/.bash_profile'
alias rvmg='rvm gemset use global'
alias t='turbo'
alias tb='t b'
alias tbu='t bu'
alias tbx='t bx'
alias turbo='jrbdev derp'
alias zmq='PB_CLIENT_TYPE=zmq PB_SERVER_TYPE=zmq'

if [ `uname` == 'Darwin' ]; then
  alias ls="ls -G"
fi
