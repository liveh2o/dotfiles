# general aliases
alias cd..="cd .."
alias l="ls -al"
alias lp="ls -p"
alias o="open ."
alias ls="ls -G"

# the "kp" alias ("que pasa"), in honor of tony p.
alias kp="ps auxwww"

# bundler aliases
alias b="bundle"
alias bc="b console"
alias bi="b install"
alias biv="bi --path vendor && echo 'vendor/ruby' >> .gitignore"
alias bivp="biv && bp"
alias bl="b list"
alias bo="EDITOR=atom b open"
alias bout="b outdated"
alias bp="b package"
alias bu="b update"
alias bx="b exec"

# git aliases
alias g="git"
alias ga="g add"
alias gaa="g add -A"
alias gb="g branch"
alias gba="g branch -a"
alias gc="g checkout"
alias gf="g fetch"
alias gh="g rev-parse HEAD"
alias gi="g commit"
alias gibu="gi -m 'Bundle update'"
alias gigc="gi -m 'Update gem cache'"
alias gl="g log"
alias glo="gl --oneline"
alias gm="g merge"
alias gs="g status"
alias pop="g stash pop"
alias stash="g stash"

# editor aliases
alias a="atom ."
alias m="mate -w ."
alias n="nova ."

# misc
alias dotfiles='cd ~/.dotfiles'
alias ffi='LDFLAGS="-L/usr/local/opt/libffi/lib" PKG_CONFIG_PATH="/usr/local/opt/libffi/lib/pkgconfig"'
alias http='python -m SimpleHTTPServer'
alias jitless='JRUBY_OPTS="$JRUBY_OPTS -J-Djruby.compile.mode=OFF"'
alias jrbdev='JRUBY_OPTS="$JRUBY_OPTS --dev --disable:did_you_mean --debug"'
alias lrb='localrb'
alias m1='CFLAGS="-Wno-error=implicit-function-declaration -Wcompound-token-split-by-macro"'
alias ns='nslookup'
alias path='echo $PATH'
alias redis='redis-server /usr/local/etc/redis.conf'
alias rvmg='rvm gemset use global'
